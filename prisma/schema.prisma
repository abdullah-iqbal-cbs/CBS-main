generator client {
  provider = "prisma-client-js"
  output   = "generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --------------------
// Auth Models
// --------------------

// --------------------------
// Agency
// --------------------------
model Agency {
  id    String       @id @default(uuid())
  name  String
  email String       @unique
  phone String?
  users UserAgency[]

  userSubAccounts UserSubAccount[] @relation("AgencyToUserSubAccounts")
  subAccounts     SubAccount[]     @relation("AgencyToSubAccounts")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// --------------------------
// SubAccount
// --------------------------
model SubAccount {
  id       String  @id @default(uuid())
  name     String
  address  String?
  agencyId String

  agency Agency           @relation("AgencyToSubAccounts", fields: [agencyId], references: [id])
  users  UserSubAccount[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// --------------------------
// User
// --------------------------
model User {
  id            String    @id @default(uuid())
  email         String   @unique
  password      String
  name          String?
  avatarUrl     String?
  isActive      Boolean   @default(false)
  emailVerified Boolean   @default(false)
  lastLoginAt   DateTime?
  deletedAt     DateTime?
  mobileNumber  String?
  phoneNumber  String?

  applicationId String

  verificationToken String?
  resetToken        String?
  resetTokenExpiry  DateTime?

  agencies    UserAgency[]
  subAccounts UserSubAccount[]
  roles       UserRole[]
  contacts    Contact[]

  googleId   String?
  githubId   String?
  facebookId String?

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}


// --------------------------
// UserAgency
// --------------------------
model UserAgency {
  userId   String
  agencyId String

  user   User   @relation(fields: [userId], references: [id])
  agency Agency @relation(fields: [agencyId], references: [id])

  @@id([userId, agencyId])
}

// --------------------------
// UserSubAccount
// --------------------------
model UserSubAccount {
  id           String  @id @default(uuid())
  userId       String
  subAccountId String
  agencyId     String?

  user       User       @relation(fields: [userId], references: [id]) // FIXED
  subAccount SubAccount @relation(fields: [subAccountId], references: [id])

  agency Agency? @relation("AgencyToUserSubAccounts", fields: [agencyId], references: [id]) // FIXED
}

// --------------------------
// Permission
// --------------------------
model Permission {
  id             String           @id @default(uuid())
  name           String           @unique
  description    String?
  permissionCode String           @unique
  roles          RolePermission[]
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
}

// --------------------------
// Role
// --------------------------
model Role {
  id          String           @id @default(uuid())
  name        String           @unique
  description String?
  permissions RolePermission[]
  users       UserRole[]
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

// --------------------------
// RolePermission
// --------------------------
model RolePermission {
  roleId       String
  permissionId String

  role       Role       @relation(fields: [roleId], references: [id])
  permission Permission @relation(fields: [permissionId], references: [id])

  @@id([roleId, permissionId])
}

// --------------------------
// UserRole
// --------------------------
model UserRole {
  userId String
  roleId String

  user User @relation(fields: [userId], references: [id])
  role Role @relation(fields: [roleId], references: [id])

  @@id([userId, roleId])
}

// --------------------------
// Contact Model
// --------------------------
model Contact {
  id        String   @id @default(uuid())
  firstName String?
  lastName  String?
  fullName  String?
  phone     String?
  emails    String[]
  tags      String[]
  source    String?
  company   String?
  notes     String?

  addressLine1 String?
  addressLine2 String?
  city         String?
  state        String?
  postalCode   String?
  country      String?

  user   User   @relation(fields: [userId], references: [id])
  userId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
